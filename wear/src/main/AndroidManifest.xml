<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seventhmoon.tenniswearumpire">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.DeviceDefault.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SetsActivity"/>
        <activity android:name=".SetsConfirmActivity"/>
        <activity android:name=".GamesInSetActivity"/>
        <activity android:name=".GamesInSetComfirmActivity"/>
        <activity android:name=".TiebreakActivity"/>
        <activity android:name=".TiebreakConfirmActivity"/>
        <activity android:name=".DeuceActivity"/>
        <activity android:name=".DeuceConfirmActivity"/>
        <activity android:name=".ServeActivity"/>
        <activity android:name=".ServeConfirmActivity"/>
        <activity android:name=".MainMenu"/>
        <activity android:name=".PointActivity"/>
        <activity android:name=".GameActivity"/>

        <service android:name=".Service.DataLayerListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/MOBILE_COMMAND" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/VOICE" />
            </intent-filter>
        </service>
    </application>

</manifest>