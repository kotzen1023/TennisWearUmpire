<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seventhmoon.tenniswearumpire.VoiceSelectActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="all">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_undo_black_48dp"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/voice_support"
                android:layout_gravity="center|top"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageViewListen"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_hearing_black_48dp"
                android:layout_gravity="right|top"/>


        </FrameLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/voiceSelectListView">


        </ListView>
    </LinearLayout>


</android.support.wearable.view.BoxInsetLayout>